<root main_tree_to_execute="NavigateToPose">
  <BehaviorTree ID="NavigateToPose">

    <!-- Nodo de recuperación global con replanificación y acciones sociales -->
    <RecoveryNode number_of_retries="6" name="NavigateRecovery">

      <!-- Secuencia principal: planificación y ejecución adaptada a situaciones sociales -->
      <PipelineSequence name="NavigateWithReplanning">

        <!-- PLANIFICACIÓN GLOBAL CON Detección de Personas -->
        <RateController hz="1.0">
          <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <ComputePathToPose goal="{goal}" path="{path}" planner_id="SmacHybridPlanner"/>
            <!-- Limpieza selectiva para no eliminar información social -->
            <ClearCostmapAroundRobot name="ClearLocalCostmap-Context" service_name="local_costmap/clear_around_robot" cleaning_radius="0.5"/>
          </RecoveryNode>
        </RateController>

        <!-- CONTROL LOCAL CON VERIFICACIÓN SOCIAL -->
        <RecoveryNode number_of_retries="1" name="FollowPath">
          <ReactiveSequence name="SocialFollowPath">
            <!-- Nodo condicional que verifica presencia de humanos en la trayectoria -->
            <Condition name="PersonaEnCamino"/>
            <!-- Detención temporal hasta que la situación se normalice -->
            <Wait wait_duration="5"/>
            <FollowPath path="{path}" controller_id="FollowPath"/>
          </ReactiveSequence>
          <ClearCostmapAroundRobot name="ClearLocalCostmap-Context" service_name="local_costmap/clear_around_robot" cleaning_radius="0.5"/>
        </RecoveryNode>

      </PipelineSequence>

      <!-- BLOQUE DE RECUPERACIÓN SOCIAL -->
      <ReactiveFallback name="RecoveryFallback">
        <GoalUpdated/>
        <RoundRobin name="RecoveryActions">
          <!-- Recuperación con limpieza selectiva -->
          <Sequence name="ClearingActions">
            <ClearCostmapAroundRobot name="ClearLocalCostmap-Context" service_name="local_costmap/clear_around_robot" cleaning_radius="0.5"/>
            <ClearEntireCostmap name="ClearGlobalCostmap-Subtree" service_name="global_costmap/clear_entirely_global_costmap"/>
          </Sequence>
          <!-- Giro lento y condicionado a la ausencia de personas cercanas -->
          <Spin spin_dist="1.57"/>
          <Wait wait_duration="5"/>
          <!-- Retroceso seguro condicionado a la verificación de espacio libre tras el robot -->
          <BackUp backup_dist="0.30" backup_speed="0.05"/>
        </RoundRobin>
      </ReactiveFallback>

    </RecoveryNode>

  </BehaviorTree>
</root>
